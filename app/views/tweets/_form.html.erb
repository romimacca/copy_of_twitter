<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-sm-1 avatar-box text-center">
      <%= image_tag (current_user.photo_url), class: "img-thumbnail rounded-circle avatar" %>
    </div>
    <div class="col-sm-11">
      <%= form.text_area :content, id: :tweet_content, class: "form-control", placeholder: "¿Qué esta pasando?" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Twittear", class: "btn btn-primary rounded-pill float-right mt-2 px-4" %>
  </div>
<% end %>
